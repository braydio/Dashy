# Example environment variables for Dashy
# Copy this file to .env and set your secrets
WEATHER_API_KEY=your_openweathermap_api_key
MAIL_STATUS_ENDPOINT=http://127.0.0.1:8765/status
# MAILDIR and MBSYNC_COMMAND are optional overrides for the email monitor script
MAILDIR=/home/you/.mail
MBSYNC_COMMAND=mbsync -a
# Base URL for the host status microservice used by Dashy's headless checks
STATUS_API_BASE=http://192.168.1.198:5055/status
# Optional shared secret passed as X-Status-Token header for the status API
STATUS_API_TOKEN=change_me
